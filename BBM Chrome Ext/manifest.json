{
    "name": "Black Businesses Matter",
    "version": "0.1",
    "description": "Support marginalized communities by shopping at Black owned alternatives.",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons":{
        "16": "./images/icon16.png",
        "32":"./images/icon32.png",
        "48":"./images/icon48.png",
        "128":"./images/icon128.png"
    },
    "manifest_version": 2,
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://www.amazon.ca/*"
    ]
  }
